{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "enabledManagers": [
    "npm"
  ],
  "baseBranches": [
    "main"
  ],
  "npm": {
    "minimumReleaseAge": "3 days"
  },
  "semanticCommits": "enabled",
  "semanticCommitType": "chore",
  "rangeStrategy": "pin",
  "packageRules": [
    {
      "matchDepTypes": [
        "devDependencies"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true,
      "semanticCommitType": "chore"
    },
    {
      "matchDepTypes": [
        "devDependencies"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "automerge": false,
      "semanticCommitType": "chore"
    },
    {
      "matchDepTypes": [
        "dependencies"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true,
      "semanticCommitType": "fix"
    },
    {
      "matchDepTypes": [
        "dependencies"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "automerge": false,
      "semanticCommitType": "fix"
    },
    {
      "matchDepTypes": [
        "peerDependencies"
      ],
      "semanticCommitType": "fix",
      "versionStrategy": "widen",
      "automerge": true,
      "platformAutomerge": true
    },
    {
      "matchDepTypes": [
        "engines"
      ],
      "automerge": true,
      "platformAutomerge": true,
      "rangeStrategy": "widen"
    }
  ],
  "schedule": ["at any time"]
}
